FROM alpine:3.7

ENV goscheduler_AGENT_VERSION=v1.5

RUN apk add --no-cache ca-certificates  tzdata bash \
    &&  mkdir -p /app \
    &&  wget -P /tmp  https://chn.gg/zhouzongyan/gocron/releases/download/${goscheduler_AGENT_VERSION}/goscheduler-node-${goscheduler_AGENT_VERSION}-linux-amd64.tar.gz \
    &&  cd /tmp \
    &&  tar  zvxf goscheduler-node-${goscheduler_AGENT_VERSION}-linux-amd64.tar.gz  \
    &&  mv /tmp/goscheduler-node-linux-amd64/goscheduler-node /app \
    &&  rm  -rf /tmp/* \
    &&  cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime

WORKDIR /app
EXPOSE 5921

ENTRYPOINT ["/app/goscheduler-node", "-allow-root"]
